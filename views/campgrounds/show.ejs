<% layout('layouts/boilerplate') %>
    <h1><%=campground.title%></h1>
    <h2>Price: <%=campground.price%></h2>
    <h2>Location: <%=campground.location%></h2>
    <p><%=campground.description%></p>
    <form
      action="/campgrounds/<%=campground._id%>?_method=DELETE"
      method="post"
    >
      <button>Delete Campground</button>
    </form>
    <footer>
      <button>
        <a href="/campgrounds/<%=campground._id%>/edit">Edit campground</a>
      </button>
      <button><a href="/campgrounds">Back to all campgrounds</a></button>
    </footer>

